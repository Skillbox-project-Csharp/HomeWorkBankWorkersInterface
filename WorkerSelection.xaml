<Window x:Class="HomeWorkBankWorkersInterface.WorkerSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkBankWorkersInterface"
        mc:Ignorable="d"
        Title="WorkerSelection" Height="450" Width="800">
    <Grid>
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <ComboBox x:Name="ComboBoxWorkers" Width="120">
                <TextBlock Text="Консультант"/>
                <TextBlock Text="Менеджер"/>
            </ComboBox>
            <Button 
                x:Name="ButtonSelection" 
                Content="ОК" 
                Click="ButtonSelection_Click"/>
        </StackPanel>
    </Grid>
</Window>
